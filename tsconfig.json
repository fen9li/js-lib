{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "eoneo-pay": ["src/eoneo-pay.ts", "dist/eoneo-pay.js"],
      "*": ["src/*"]
    },
    "sourceMap": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "types"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
